<!DOCTYPE html>
<html>
<head>
    <title>{{.SiteTitle}}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        /* Site CSS */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
        }

        header {
            text-align: center;
            padding: 2rem 0;
            border-bottom: 1px solid #eee;
            margin-bottom: 2rem;
        }

        nav {
            margin-top: 1rem;
        }

        nav a {
            text-decoration: none;
            color: #007cba;
            margin: 0 15px;
            padding: 8px 12px;
            border-radius: 4px;
            transition: background-color 0.2s;
        }

        nav a:hover {
            background-color: #f0f8ff;
        }

        main {
            min-height: 60vh;
        }

        footer {
            text-align: center;
            padding: 2rem 0;
            margin-top: 2rem;
            border-top: 1px solid #eee;
            color: #666;
        }

        .hero {
            text-align: center;
            padding: 2rem 1rem;
            margin-bottom: 2rem;
            border-radius: 8px;
            background-color: #f8f9fa;
        }

        .about {
            margin: 2rem 0;
        }

        .about h3 {
            border-bottom: 1px solid #eee;
            padding-bottom: 0.5rem;
        }

        .portfolio {
            margin: 2rem 0;
        }

        .projects {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 1rem;
        }

        .project {
            border: 1px solid #eee;
            border-radius: 8px;
            padding: 1.5rem;
            background-color: #f8f9fa;
        }

        .project img {
            max-width: 100%;
            height: auto;
            border-radius: 4px;
            margin-top: 0.5rem;
        }

        @media (max-width: 768px) {
            body {
                padding: 10px;
            }
            
            nav {
                display: flex;
                flex-wrap: wrap;
                justify-content: center;
            }
            
            nav a {
                margin: 5px;
            }
            
            .projects {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <header>
        <h1>{{.SiteTitle}}</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/portfolio">Portfolio</a>
            <a href="/contact">Contact</a>
        </nav>
    </header>

    <main>
        <section class="hero" {{if .heroImage}}style="background-image: url('{{.heroImage}}'); background-size: cover; background-position: center; padding: 100px 20px; color: white; text-align: center;"{{end}}>
            <h2>Welcome to {{.SiteTitle}}</h2>
            <p>{{.WelcomeText}}</p>
        </section>

        {{if .aboutText}}
        <section class="about">
            <h3>About Us</h3>
            <div class="about-content">{{.aboutText}}</div>
        </section>
        {{end}}

        {{if .portfolio}}
        <section class="portfolio">
            <h3>Our Portfolio</h3>
            <div class="projects">
            {{range .portfolio}}
                <div class="project">
                    <h4>{{.title}}</h4>
                    <p>{{.description}}</p>
                    {{if .image}}<img src="{{.image}}" alt="{{.title}}" />{{end}}
                </div>
            {{end}}
            </div>
        </section>
        {{end}}
    </main>

    <footer>
        <p>&copy; {{.CurrentYear}} {{.SiteTitle}}. All rights reserved.</p>
        {{if .ContactInfo}}
        <p>Contact: {{.ContactInfo.email}}, {{.ContactInfo.phone}}</p>
        {{end}}
    </footer>

    <script>
        // Site JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Site loaded');
        });
    </script>
</body>
</html>