        <section class="hero" {{if .heroImage}}style="background-image: url('{{.heroImage}}'); background-size: cover; background-position: center; padding: 100px 20px; color: white; text-align: center;"{{end}}>
            <h2>Welcome to {{.SiteTitle}}</h2>
            <p>{{.WelcomeText}}</p>
        </section>

        {{if .aboutText}}
        <section class="about">
            <h3>About Us</h3>
            <div class="about-content">{{.aboutText}}</div>
        </section>
        {{end}}

        {{if .portfolio}}
        <section class="portfolio">
            <h3>Our Portfolio</h3>
            <div class="projects">
            {{range .portfolio}}
                <div class="project">
                    <h4>{{.title}}</h4>
                    <p>{{.description}}</p>
                    {{if .image}}<img src="{{.image}}" alt="{{.title}}" />{{end}}
                </div>
            {{end}}
            </div>
        </section>
        {{end}}